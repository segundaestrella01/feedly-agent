# OpenAI Configuration (Stage 3.1 - LLM Client)
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_BATCH_SIZE=50
EMBEDDING_MAX_RETRIES=3

# Chroma Configuration (Stage 3.2 - Vector Database)
VECTOR_DB_TYPE=chroma
CHROMA_DATA_PATH=./data/chroma
CHROMA_COLLECTION_NAME=rss_chunks
VECTOR_DIMENSION=1536

# Processing Configuration (Stage 3.4 - Embedder Worker)
EMBEDDING_CONCURRENCY=1
EMBEDDING_DELAY_MS=1000

# General LLM Configuration
LLM_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Time Window Configuration
# Controls how far back to fetch RSS items and generate digests
# Options: 1h, 6h, 12h, 24h, 3d, 7d
TIME_WINDOW=24h

# Digest Configuration (Stage 4 - Digest Generation)
DIGEST_CLUSTER_COUNT=5

# Notion Configuration (Stage 4 - Notion Integration)
NOTION_API_KEY=secret_xxxxxxxxxxxxx
NOTION_DATABASE_ID=xxxxxxxxxxxxx
NOTION_ENABLE_TOC=true
NOTION_COLLAPSE_ARTICLES=true

# Vector Database Configuration (legacy)
VECTOR_DB_URL=http://localhost:6333

# Database Configuration
METADB_URL=sqlite:./data/metadb.sqlite

# Email Configuration
SMTP_URL=smtp://user:pass@smtp.server:587

# Application Configuration
APP_SECRET=some_random_secret
SCHEDULE_CRON="0 7 * * *"

# Clustering Configuration (Stage 4 - Summarizer)
CLUSTER_COUNT=5

# Data Directory
DATA_DIR=./data